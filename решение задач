//вычислить сумму от 1 до 100

public class Masya1 {
    public static void main(String[] args) {
        int sum = 0;
        for (int i=1; i <=100; i++) {
            //
            sum = sum + i;
        }
        System.out.println(sum);
    }
}


//вывести на экран от 1 до 100

public class Masya1 {
    public static void main(String[] args) {
        for (int i=1; i <=100; i++) {
            System.out.println(i);
        }
    }
}


//вывести на экран четные числа от 1 до 100
public class Masya1 {
    public static void main(String[] args) {

        for (int i = 1; i <= 100; i++) {

            if (i%2 ==0) {

                System.out.println(i);
            }
        }
    }
}


//вычислить сумму четных чисел от 1 до 100
public class Masya1 {
    public static void main(String[] args) {
    int sum = 0;
        for (int i = 1; i <= 100; i++) {

            if (i%2 ==0) {
            sum = sum + i;

            }
        }
        System.out.println(sum);
    }
}

//вычислить сумму нечетных чисел от 1 до 100
public class Masya1 {
    public static void main(String[] args) {
    int sum = 0;
        for (int i = 1; i <= 100; i++) {

            if (i%2 == 1) {
            sum = sum + i;

            }
        }
        System.out.println(sum);
    }
}


//вывести на экран нечетные числа от 1 до 100
public class Masya1 {
    public static void main(String[] args) {

        for (int i = 1; i <= 100; i++) {

            if (i % 2 == 1) {

                System.out.println(i);
            }
        }
    }
}

//вывести 10!

public class Masya1 {
    public static void main(String[] args) {
    int f=1;
    for (int i = 1; i <= 10;i++) {

        f = f*i;

    }

    System.out.println(f);
    }
}




//вывести числа от 5 до 1 в обратном порядке
public class Masya1 {
     public static void main(String[] args) {

         for (int i = 5; i > 0; --i) {

             System.out.println(i);
         }
     }
 }




 Ввод любого целого числа с клавиатуры и вычисление суммы до этого числа (2-мя способами https://javarush.ru/quests/lectures/questsyntax.level03.lecture07)


import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.io.IOException;

//import java.util.Scanner;

public class Masya1 {


    public static void main(String[] args) throws IOException {

        /* Scanner scanner = new Scanner(System.in);

        int i = scanner.nextInt();

        */



        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));

        String aChislo = reader.readLine();

        int i = Integer.parseInt(aChislo);

        int sum = 0;

        for (;i > 0; i--) {
            sum = sum + i;

        }
        System.out.println(sum);
    }
}


//Необходимо вывести на экран таблицу умножения на 3:

public class Masya1 {

    public static void main(String[] args) {

        for (int i = 1; i <= 10; i++) {

            int umnozh = 3 * i;

            System.out.println("3 * " + i + " = " + umnozh);
        }
    }
}


